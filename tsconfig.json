{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "app",
        "outDir": "build",
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}